<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group mb-3 col-sm-6 ">
    <%= form.label :name, class: "control-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group mb-3 col-sm-6">
    <%= form.label :sku, class: "control-label" %>
    <%= form.text_field :sku, class: "form-control" %>
  </div>

  <div class="form-group mb-3 col-sm-6">
    <%= form.label :price, class: "control-label" %>
    <%= form.number_field :price, step: "0.01", class: "form-control" %>
  </div>

  <div class="form-group mb-3 col-sm-6">
    <%= form.label :stock_quantity, class: "control-label" %>
    <%= form.number_field :stock_quantity, class: "form-control" %>
  </div>

  <div class="form-group mb-3 col-sm-6">
    <%= form.submit %>
  </div>

<% end %>


